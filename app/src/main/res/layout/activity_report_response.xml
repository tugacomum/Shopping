<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_background">
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/round_outline"
            android:clipToOutline="true"
            android:layout_centerVertical="true"
            android:src="@drawable/microsoftteams_image_1"/>
        <TextView
            android:id="@+id/textViewWelcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Ticket"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@id/headerLayout"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="internetsoundseasy@gmail.com"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <EditText
            android:id="@+id/editTextMessageee"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/card_border"
            android:gravity="top"
            android:hint="Digite sua mensagem"
            android:inputType="textMultiLine"
            android:maxLines="14"
            android:padding="10dp"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:text="Fotos"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/textViewReplyMessage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:hint="Responda aqui..."
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/card_border"
        android:textColor="@color/black"
        android:layout_marginBottom="220dp"
        android:padding="10dp"
        android:gravity="top"
        android:layout_alignParentBottom="true" />
    <ImageView
        android:id="@+id/waveImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/wave" />
    <ImageView
        android:id="@+id/imageViewBackArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/waveImage"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/back" />
    <Button
        android:id="@+id/buttonResponse"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@android:color/white"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Responder" />
</RelativeLayout>